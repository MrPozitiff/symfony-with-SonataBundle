<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,500,700,800' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

        <link rel="stylesheet" type="text/css" href="{{ asset('source/css/main.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('source/css/style.css') }}">

        <script src="{{ asset('bundles/sonataadmin/vendor/jquery/dist/jquery.min.js') }}"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="all">
            {% include 'main/blocks/nav_bar.html.twig' %}
            {% block header %}

            {% endblock %}

            {% if app.request.get('_route') == 'fos_user_security_login' or app.request.get('_route') == 'fos_user_registration_register' or app.request.get('_route') == 'not_found' %}

            {% else %}

            <div id="content">
                <div class="container">
                    <div class="row">
                        {% include 'main/blocks/left_sidebar.html.twig' %}

            {% endif %}

                {% block body %}{% endblock %}
                    </div>
                </div>
            </div>

            {% include 'main/blocks/footer.html.twig' %}
        </div>
            {% block javascripts %}{% endblock %}
    </body>
</html>
